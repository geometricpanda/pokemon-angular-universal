{
  "version": 2,
  "public": true,
  "name": "universal-app",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ],
  "headers":[
    {
      "source": "/(.*)",
      "headers" : [
        {
          "key" : "x-robots-tag",
          "value" : "none"
        },
        {
          "key": "Cache-Control",
          "value": "max-age=60"
        }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/universal-app/browser/**"
    }
  }
}
